<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple"
    android:gravity="right"
    android:orientation="horizontal"
    tools:context=".GirisEkrani"
    tools:layout_editor_absoluteY="81dp">


    <ImageView
        android:id="@+id/profilResmi"
        android:layout_width="211dp"
        android:layout_height="0dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/ar"
        app:layout_constraintBottom_toTopOf="@+id/txtAciklama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAciklama"
        android:layout_width="308dp"
        android:layout_height="63dp"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="31dp"
        android:text="Küresel etkisi olan küçük iyilikler"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:textColor="@color/colorBlack"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/btnHesapOlustur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilResmi" />

    <Button
        android:id="@+id/btnHesapOlustur"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape"
        android:textAllCaps="false"
        android:text="Görme Engelliyim"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGonulluGiris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAciklama" />


    <Button
        android:id="@+id/btnGonulluGiris"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape"
        android:text="Gönüllüyüm"
        android:textAllCaps="false"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHesapOlustur" />


</androidx.constraintlayout.widget.ConstraintLayout>