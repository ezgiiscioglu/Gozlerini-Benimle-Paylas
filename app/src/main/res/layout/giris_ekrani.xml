<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:gravity="right"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="142dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="30dp"
        android:text="Görme Engelliler"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="142dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:layout_marginRight="9dp"
        android:text="Gönüllüler"
        android:textSize="17dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/resim" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="40dp"
        android:text="Gozlerini Benimle Paylas görme engelli bireyler için geliştirilmiş bir sosyal yardım platformudur."
        android:layout_marginBottom="60dp"
        android:textSize="17dp"/>

    <Button
        android:id="@+id/btnHesapOlustur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="Kör Veya Görme Engelliyim"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/gonulluGiris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnHesapOlustur"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Gönüllüyüm" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="48dp"
        android:text="1000"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="98dp"
        android:layout_marginRight="98dp"
        android:text="1000"
        android:textSize="17dp" />


</RelativeLayout>