<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:gravity="right"
    android:orientation="horizontal"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/txtGormeEngelliSayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="48dp"
        android:text="1000"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtGonulluSayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtGormeEngelliSayisi"
        android:layout_alignParentRight="true"
        android:layout_marginRight="75dp"
        android:text="1000"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/txtGormeEngelli"
        android:layout_width="142dp"
        android:layout_height="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtGormeEngelliSayisi"
        android:text="Görme Engelliler"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtGonullu"
        android:layout_width="142dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="-10dp"
        android:layout_below="@+id/txtGonulluSayisi"
        android:text="Gönüllüler"
        android:textSize="17dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_below="@+id/txtGormeEngelli"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/resim" />

    <TextView
        android:id="@+id/txtAciklama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Gozlerini Benimle Paylas görme engelli bireyler için geliştirilmiş bir sosyal yardım platformudur."
        android:layout_marginBottom="20dp"
        android:textSize="17dp"/>

    <Button
        android:id="@+id/btnGormeEngelliGiris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAciklama"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="Kör Veya Görme Engelliyim"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_shape"/>


    <Button
        android:id="@+id/btnGonulluGiris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGormeEngelliGiris"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Gönüllüyüm"
        android:background="@drawable/button_shape"/>



</RelativeLayout>
