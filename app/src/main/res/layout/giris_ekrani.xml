<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:gravity="right"
    android:orientation="horizontal"
    tools:context=".GirisEkrani">

    <TextView
        android:id="@+id/txtGonulluSayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="72dp"
        android:text="1000"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtGormeEngelli"
        android:layout_width="142dp"
        android:layout_height="25dp"

        android:layout_marginStart="49dp"
        android:text="Görme Engelliler"
        android:textSize="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtGonullu"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtGormeEngelliSayisi"
        android:layout_width="46dp"
        android:layout_height="29dp"

        android:layout_marginStart="88dp"
        android:text="1000"
        android:textSize="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtGonulluSayisi"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtGonullu"
        android:layout_width="107dp"
        android:layout_height="23dp"

        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:text="Gönüllüler"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGonulluSayisi" />


    <ImageView
        android:id="@+id/profilResmi"
        android:layout_width="0dp"
        android:layout_height="147dp"

        android:layout_marginTop="20dp"

        android:src="@drawable/resim"
        app:layout_constraintBottom_toTopOf="@+id/txtAciklama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGormeEngelli"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtAciklama"
        android:layout_width="298dp"
        android:layout_height="71dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="21dp"
        android:text="Gozlerini Benimle Paylas görme engelli bireyler için geliştirilmiş bir sosyal yardım platformudur."
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/btnHesapOlustur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilResmi" />

    <Button
        android:id="@+id/btnHesapOlustur"
        android:layout_width="271dp"
        android:layout_height="50dp"

        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape"
        android:text="Görme Engelliyim"
        app:layout_constraintBottom_toTopOf="@+id/btnGonulluGiris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15dp"/>


    <Button
        android:id="@+id/btnGonulluGiris"
        android:layout_width="209dp"
        android:layout_height="44dp"
        android:textSize="15dp"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape"
        android:text="Gönüllüyüm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>