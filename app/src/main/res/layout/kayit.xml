<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/txtAd"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="55dp"
        android:text="Adınız :"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etAd"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtAd"
        android:layout_alignLeft="@+id/txtAd"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="89dp"
        android:background="#11000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/txtSoyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etAd"
        android:layout_alignLeft="@+id/etAd"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="137dp"
        android:text="Soyadınız :"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etSoyad"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtAd"
        android:layout_alignLeft="@+id/txtAd"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="166dp"
        android:background="#11000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etAd"
        android:layout_alignLeft="@+id/etAd"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="216dp"
        android:text="Email :"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail"
        android:layout_alignEnd="@+id/etAd"
        android:layout_alignRight="@+id/etAd"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:background="#11000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/txtSifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etAd"
        android:layout_alignLeft="@+id/etAd"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginBottom="183dp"
        android:text="Şifre :"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etSifre"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etAd"
        android:layout_alignLeft="@+id/etAd"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginBottom="151dp"
        android:background="#11000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnKayitOl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etAd"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="84dp"
        android:text="Kayıt Ol" />
</RelativeLayout>