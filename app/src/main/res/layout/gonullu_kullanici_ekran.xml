<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple">


    <RelativeLayout

        android:id="@+id/relativeLayout"
        android:layout_width="320dp"
        android:layout_height="287dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/kenarlik"
        app:layout_constraintBottom_toTopOf="@+id/txtAciklama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profilResmi"
            android:layout_width="250dp"
            android:layout_height="167dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/be_my_eyes" />

        <TextView
            android:id="@+id/txtGormeEngelli"
            android:layout_width="142dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginBottom="25dp"
            android:text="Görme Engelliler"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txtGonullu"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="189dp"
            android:layout_marginLeft="189dp"
            android:layout_marginBottom="25dp"
            android:text="Gönüllüler"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txtGonulluSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtGonullu"
            android:layout_alignTop="@+id/txtGonullu"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-37dp"
            android:layout_marginRight="81dp"
            android:layout_marginBottom="14dp"
            android:text="1000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtGormeEngelliSayisi"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtGormeEngelli"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginEnd="98dp"
            android:layout_marginRight="98dp"
            android:layout_marginBottom="14dp"
            android:layout_toStartOf="@+id/txtGonulluSayisi"
            android:layout_toLeftOf="@+id/txtGonulluSayisi"
            android:text="1000"
            android:textSize="16dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/txtAciklama"
        android:layout_width="0dp"
        android:layout_height="91dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/kenarlik"
        android:padding="15dp"
        android:text="Gözlerini Benimle Paylaş görme engelli bireyler için geliştirilmiş bir sosyal yardım platformudur."
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>